@model WebApp.Models.Evento

@{
    ViewData["Title"] = "Editar Evento";
}

<div class="card text-center">
    <div class="card-header">
        Edicion de Eventos
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-users me-2"></i>Volver a la Administracion</a>
    </div>
</div>
<div class="row m-5">
    <div class="col-md-12">
        <form class="row justify-content-center" asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" value="@Model.Id" />
            <div class="col-md-4">
                <div class="form-group m-2">
                    <input asp-for="Name" class="form-control" placeholder="Nombre" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <select asp-for="LugarId" class="form-select" asp-items="ViewBag.Lug"></select>
                    <span asp-validation-for="LugarId" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input asp-for="Estado" class="form-control" placeholder="Estado" value="@Model.Estado"/>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group m-2">
                    <input asp-for="Description" class="form-control" placeholder="Descripcion" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Cat"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input type="submit" value="Guardar Evento" class="btn btn-primary col-12" />
                </div>
            </div>
        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
