@model Lugar

<h2>Editar Informacion del Lugar: <strong>@Model.Name</strong></h2>

<hr />

<div class="row ">
    <div class="col-md-4 card">

        <form asp-action="Update" method="post">
            <input asp-for="Id"  type="hidden"/>

            <div class="form-group m-3">
                <input class="form-control" asp-for="Name" placeholder="Nombre del Lugar" value="@Model.Name" />
            </div>

            <div class="form-group m-3">
                <input class="form-control" asp-for="Description" placeholder="Descripcion del Lugar" value="@Model.Description" />
            </div>

            <div class="form-group m-3">
                <input class="btn btn-outline-danger col-12" type="submit" value="Guardar Cambios" />
            </div>

        </form>

    </div>
</div>
<hr />
<a asp-action="Index" class="btn btn-outline-danger">Volver al Listado</a>