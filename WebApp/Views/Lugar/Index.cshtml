@model ICollection<Lugar>

<div class="card text-center">
    <div class="card-header">
        Administracion de Lugares
    </div>
    <div class="card-body">
        <a asp-action="Create"
           class="btn btn-outline-primary"><i class="fa-solid fa-users me-2"></i>Crear Nuevo Lugar</a>
    </div>
</div>
<div class="mt-3">
    <table class=" table table-striped">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Update" asp-route-LugarId="@item.Id" ><i class="fa-solid fa-pen-to-square me-2"></i></a>
                        <a><i class="fa-solid fa-circle-info me-2"></i></a>
                        <a><i class="fa-solid fa-trash me-2"></i></a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>
