@model ICollection<Lugar>

<div class="card text-center">
    <div class="card-header">
        Administracion de Lugares
    </div>
    <div class="card-body">
        <a asp-action="Create"
           class="btn btn-outline-primary"><i class="fa-solid fa-users me-2"></i>Crear Nuevo Lugar</a>
    </div>
</div>
<div class="mt-3">
    <table class=" table table-striped">
        <thead>
            <tr class="text-center">
                <th colspan="4">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalOrdenar">
                        Ordenar
                    </button>
                </th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Update" asp-route-LugarId="@item.Id" ><i class="fa-solid fa-pen-to-square me-2"></i></a>
                        <a><i class="fa-solid fa-circle-info me-2"></i></a>
                        <a><i class="fa-solid fa-trash me-2"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Ordenar-->
<div class="modal fade" id="modalOrdenar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Seleccione...</h5>
         </div>
      <div class="modal-body">
          <form asp-action="Index" method="get">
              <select name="OrdenarPor" class="form-select">
                <option class="p-1" value="Id">Id</option>
                <option class="p-1" value="Nombre">Nombre</option>
              </select>
              <button type="submit" class="btn btn-outline-danger col-12 mt-2">Ordenar</button>
          </form>  
      </div>
    </div>
  </div>
</div>