@model Lugar

<h2>Crear Nuevo Lugar</h2>

<hr />

<div class="row ">
    <div class="col-md-4 card">

        <form asp-action="Create" method="post">

            <div class="form-group m-3">
                <input class="form-control" asp-for="Name" placeholder="Nombre del Lugar" />
            </div>

            <div class="form-group m-3">
                <input class="form-control" asp-for="Description" placeholder="Descripcion del Lugar" />
            </div>

            <div class="form-group m-3">
                <input class="btn btn-outline-danger col-12" type="submit" value="Crear Lugar" />
            </div>

        </form>

    </div>
</div>
<hr />
<a class="btn btn-outline-danger">Volver al Listado</a>